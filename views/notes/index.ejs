<%- include('../partials/header') %>

<table class="pure-table">
    <thead>
        <tr></tr>
            <th colspan="4">My Notebooks</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td colspan="2">b</td>
            <td colspan="2">a</td>
        </tr>
        <tr>
            <td colspan="2">b</td>
            <td colspan="2">a</td>
        </tr>
    </tbody>

</table>

<button class="pure-button"><a href="/notes/new">
    <i class="fas fa-plus-circle"></i> Make a New Note
</a></button>

<div class="tableWrapper">
    <table class="pure-table">
        <thead>
            <tr>
                <th colspan="7">My Notes</th> 
            </tr>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Creation Date</th>
                <th>Last Update</th>
                <th>Mood</th>
                <th>Tag</th>
                <th>Public?</th>
            </tr>
        </thead>
        <tbody>
                <% notes.forEach(function(n) { %>
                <tr>
                    <td>
                        <form action="/notes/<%= n._id %>?_method=DELETE" class="delete-form" method="POST">
                            <button type="submit"><i class="fas fa-trash-alt"></i></button>
                        </form>
                    </td>
                    <td><a href="/notes/<%= n._id %>"><%= n.title %></a></td>
                    <td><%= n.createdAt %></td>
                    <td><%= n.updatedAt %></td>
                    <td><%= n.mood %></td>
                    <td><%= n.tag %></td>
                    <% if(n.public === true) { %>
                        <td><i class="fas fa-check-circle"></i></td>
                    <% } else { %> 
                        <td></td>
                    <% } %>
                </tr>
                <% }); %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer') %>